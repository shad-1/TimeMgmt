

@{
    ViewData["Title"] = "My Tasks";
}

@model List<ToDo>

<table class="table table-bordered table-striped">


    <thead class="font-weight-bold">
        <tr>
            <td>Task</td>
            <td>Due Date</td>
            <td>Category</td>
            <td>Completed</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {


            @*@   switch (x.Quadrant) { }*@

            @*<p>Quadrant 1</p>*@
            if (x.Completed == true)
                {
                    ;
                }
            else if (x.Quadrant == 1)
            {
                <tr>
                    <td>@x.TaskName</td>
                    <td>@x.DueDate</td>
                    <td>@x.Category.CategoryName</td>
                    <td>@x.Completed</td>

                    <td><a asp-controller="Home" asp-action="EditTask" asp-route-id="@x.TaskId">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="DeleteTask" asp-route-id="@x.TaskId">Delete</a></td>
                </tr>
            }

            @*<p>Quadrant 2</p>*@
            else if (x.Quadrant == 2)
            {
                <tr>
                    <td>@x.TaskName</td>
                    <td>@x.DueDate</td>
                    <td>@x.Category.CategoryName</td>
                    <td>@x.Completed</td>

                    <td><a asp-controller="Home" asp-action="EditTask" asp-route-id="@x.TaskId">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="DeleteTask" asp-route-id="@x.TaskId">Delete</a></td>
                </tr>
            }

            @*<p>Quadrant 3</p>*@
            else if (x.Quadrant == 3)
            {
                <tr>
                    <td>@x.TaskName</td>
                    <td>@x.DueDate</td>
                    <td>@x.Category.CategoryName</td>
                    <td>@x.Completed</td>

                    <td><a asp-controller="Home" asp-action="EditTask" asp-route-id="@x.TaskId">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="DeleteTask" asp-route-id="@x.TaskId">Delete</a></td>
                </tr>
            }

            @*<p>Quadrant 4</p>*@
            else
            {
                <tr>
                    <td>@x.TaskName</td>
                    <td>@x.DueDate</td>
                    <td>@x.Category.CategoryName</td>
                    <td>@x.Completed</td>

                    <td><a asp-controller="Home" asp-action="EditTask" asp-route-id="@x.TaskId">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="DeleteTask" asp-route-id="@x.TaskId">Delete</a></td>
                </tr>
            }

        }

    </tbody>

</table>


